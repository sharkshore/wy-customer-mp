/** 轮播图样式 */

.swiper {
  height: 400rpx;
  width: 100%;
}

.swiper image {
  height: 100%;
  width: 100%;
}

/** 搜索框 */

.search_container {
  background-color: #e7e7e7;
  padding: 10rpx 0;
}

.search {
  font-family: 华文细黑;
  font-size: 14px;
  color: #ababab;

  border: 1px solid #b7b7b7;
  background-color: white;
  margin: 10rpx 50rpx;
  padding: 5rpx 0;
  border-radius: 5px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search icon {
  /* vertical-align: -2px; */
  margin-left: 6rpx;
  vertical-align: middle;
}

/** 商品分类类目 */

.category_container {
  background-color: white;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  width: 100%;
  padding-top: 20rpx;
}

.category_container::after {
  content: "";
  display: block;
  clear: both;
}

.category_block {
  float: left;
  width: 20%;
  box-sizing: border-box;
  padding-bottom: 10px;
}

.category_image {
  width: 80rpx;
  height: 80rpx;
  display: block;
  margin: 0 auto;
  margin-bottom: 5px;
}

.category_txt {
  font-family: Arial;
  background-color: #fff;
  color: #333;
  width: 100%;
  text-align: center;
  display: block;
  font-size: 14px;
}

/** 商品展位 */

.booth_container {
}

.booth_block {
}



.booth_title {
  display: flex;
  justify-content: space-between;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #e7e7e7;
  padding: 20rpx 10rpx;
  font-family: 微软雅黑;
  font-size: 18px;
  color: #333;
}

.booth_product_container {

  width: 100%;
  height: 100%;
  box-sizing: border-box;  
}

.product {
  float: left;  
  font-size: 14px;
  width: 50%;
  
}

.product image {
  width: 369rpx;
  height: 369rpx;
  padding-left:3rpx;
  padding-right:3rpx; 
}

.product text {
  display: block;  
  padding:0 0 12rpx 8rpx;

  color: #ababab;
  font-family: 方正兰亭细黑;
  font-size: 14px;  

  overflow: hidden;  
  white-space: nowrap;  
  text-overflow: ellipsis;  
}

.product .price {
  color: red;
}
