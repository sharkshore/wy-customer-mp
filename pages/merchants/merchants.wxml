<view class='merchants_container'>

  <!-- 购物车顶部 -->
  <view class='merchants_top'>
    <label ><radio  checked='true' color='#FF4500'/>全选</label>
    <image src='../../asserts/shanchu.png' />
  </view>

  <!-- 购物车列表 -->
  <view class='merchants_main'>

    <block wx:for="{{[1,2,3,4,5,6,7]}}">
      <view class='gap-2'></view>
      <view class='product'>
        <radio  checked='true' color='#FF4500'/>
        <image src='https://qiongxun-weiying.oss-cn-shanghai.aliyuncs.com/product/%E4%B8%BB%E5%9B%BE1.jpg'/>
        <view class='desc'>
          <text class='title'>海绵百洁布</text>
          <text class='guige'>颜色:红格子 尺码:XL</text>
          <view class='desc_bottom'>
             <text class='price'>¥120.00</text>
             <view class="stepper">  
                <text class="{{minusStatus}}" bindtap="bindMinus">-</text>  
                <input type="number" bindchange="bindManual" value="52" />  
                <text class="normal" bindtap="bindPlus">+</text>  
             </view> 
          </view>

        </view>
      </view>
    </block>

  </view>
    
  <!-- 购物车编辑 -->
    <view class='merchants_bottom'>
        <text >总计:¥120.00</text>
        <view class='btn_jiesuan'>结算</view>
    </view>


</view>
