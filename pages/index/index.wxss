/** 轮播图样式 */

.swiper {
  height: 400rpx;
  width: 100%;
}

.swiper image {
  height: 100%;
  width: 100%;
}

/** 搜索框 */

.search_container {
  background-color: #e7e7e7;
  padding: 10rpx 0;
}

.search_input {
  border: 1px solid #b7b7b7;
  background-color: white;
  margin: 10rpx 50rpx;
  padding: 5rpx 0;
  border-radius: 5px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search_txt {
  font-family: 华文细黑;
  font-size: 14px;
  color: #ababab;
}

.search_icon {
  /* vertical-align: -2px; */
  margin-left: 6rpx;
  vertical-align: middle;
}

/** 商品分类类目 */

.category_container {
  background-color: white;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  width: 100%;
  padding-top: 20rpx;
}

.category_container::after {
  content: "";
  display: block;
  clear: both;
}

.category_block {
  float: left;
  width: 20%;
  box-sizing: border-box;
  padding-bottom: 10px;
}

.category_image {
  width: 80rpx;
  height: 80rpx;
  display: block;
  margin: 0 auto;
  margin-bottom: 5px;
}

.category_txt {
  font-family: Arial;
  background-color: #fff;
  color: #333;
  width: 100%;
  text-align: center;
  display: block;
  font-size: 14px;
}

