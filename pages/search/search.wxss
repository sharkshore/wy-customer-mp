.search_container{
  background-color:#e7e7e7;
  width: 100%;
  height:1500rpx; 

  font-size: 14px;
  color: #515151;
}


/** 搜索框 */
.search_input{
  padding: 20rpx;
  display: flex;
  justify-content:space-between;
  align-items: center;
}

.search_input .left{
  border-radius: 6rpx;
  padding-left:10rpx; 
  background-color:white; 
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.search_input .left input{
  width: 580rpx;
  height: 50rpx;
}
.search_input .text{
  color: green;
}

/** 中间显示层 */
.search_middle{
  padding: 20rpx;
  display: flex;
  justify-content:space-between;
  align-items: center;
}

.search_middle text{
  display: block;
}
.search_middle image{
  display: block;
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
}

/** 底部搜索历史块 */
.search_list{

}

.search_list .item{
  color: #515151;
  border-radius: 10rpx;
  margin:20rpx 0 0 20rpx;
  background-color: #dcdcdc;
  padding: 10rpx 20rpx;
  float: left;
  display: block;
}